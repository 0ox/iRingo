#!name= Enable Apple Weather 🇺🇸US
#!desc=切换空气质量标准为AQI(US)

[Script]
# Apple Weather@iOS14 & Apple Maps@macOS
http-response ^https?:\/\/weather-data\.apple\.com(\/v1\/weather)(.*)(include=[A-Z/a-z/,/_])(.*) script-path=https://raw.githubusercontent.com/VirgilClyne/iRingo/main/js/Apple_Weather.js, requires-body=true, timeout=10, tag=Apple_Weather
# Apple Weather@iOS15 & WeatherWidget@macOS
http-response ^https?:\/\/weather-data\.apple\.com(\/v2\/weather)(.*)(dataSets=[A-Z/a-z/,])(.*) script-path=https://raw.githubusercontent.com/VirgilClyne/iRingo/main/js/Apple_Weather.js, requires-body=true, timeout=10, tag=Apple_Weather

[MITM]
hostname = %APPEND% weather-data.apple.com